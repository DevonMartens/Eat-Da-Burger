<div class="container">
    <div class="jumbotron">
        <h1>Eat-Da-Burger!</h1>
        <p> Create a burger then devour it!</p>
        <br>
        <h2>Name your burger: </h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Burger name:</label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-success" id="newburger"><span class="fa fas hamburger"></span></button>
                </div>
            </form>
        </panel>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="panel">
            <div class="panel-header" id ="left">Burgers that need to be devoured: </div>
          <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devoured}}"><span class="fa fa-cutlery"></span></button>
                                <hr>
                                
                            {{/unless}}
                        {{/each}}
                    </ul>  
        </div>
    </div>
</div>

<div class="col-sm-6">
            <div class="panel">
                <div class="panel-header" id="right"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devoured}}"><span class="fa fa-trash"></span></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
